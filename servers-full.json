{
  "mcpServers": {
    "msgraph": {
      "transport": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/marc-hanheide/microsoft-mcp",
        "--reinstall-package",
        "microsoft-mcp",
        "microsoft-mcp"
      ],
      "env": {
        "MICROSOFT_MCP_CLIENT_ID": "${MICROSOFT_MCP_CLIENT_ID}",
        "MICROSOFT_MCP_TENANT_ID": "${MICROSOFT_MCP_TENANT_ID}"
      }
    },
    "time": {
      "transport": "stdio",
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone", "Etc/UTC"]
    },
    "mapbox": {
      "transport": "stdio",
      "timeout": 60,
      "command": "npx",
      "args": [ "-y", "@mapbox/mcp-server"],
      "env": {
        "MAPBOX_ACCESS_TOKEN": "${MAPBOX_ACCESS_TOKEN}"
      }
    }

  }
}