
# Environment variables for MCP Proxy
TZ=Etc/UTC

# MCP Server Configuration
# Path to the JSON file containing MCP server configurations
# Defaults to 'servers.json' in the module's root directory if not set
MCP_PROXY_SERVERS_CONFIG=servers.json

# Zrok configuration (replace SECRET with your actual values)
ZROK_TOKEN=SECRET
ZROK_NAME=marcsmcpproxy
ZROK_API_ENDPOINT=https://zrok.zrok.lcas.group
ZROK_ENV_NAME=marcsmcpproxy_env

MAPBOX_ACCESS_TOKEN=SECRET

# Google OAuth2 configuration for FastMCP authentication
FASTMCP_SERVER_AUTH=GOOGLE
FASTMCP_SERVER_AUTH_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
FASTMCP_SERVER_AUTH_GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
FASTMCP_SERVER_AUTH_GOOGLE_BASE_URL=https://${ZROK_NAME}.zrok.lcas.group
FASTMCP_SERVER_AUTH_GOOGLE_REQUIRED_SCOPES=openid,https://www.googleapis.com/auth/userinfo.email
